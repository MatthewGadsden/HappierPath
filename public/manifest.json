{
  "name": "HappierPath",
  "version": "4.0.2",
  "manifest_version": 3,
  "description": "... because everything is still relative.",
  "action": {
    "default_icon": "icon_16.png",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ]
}