{
  "name": "HappierPath",
  "version": "3.0.0",
  "manifest_version": 3,
  "description": "... because everything is relative.",
  "action": {
    "default_icon": "icon_16.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  }
}